#9-13 done in class
import random
class Die:
    """Create a dice that is six sides or maybe different"""
    def __init__(self, sides=6):
        self.sides = sides
    def roll(self):
        result = random.randint(1, self.sides+1)
        print(result)
        return result
my_dice = Die()
your_dice = Die(20)

my_dice.roll()
your_dice.roll()
print("\n")

#9-14 done in class
import random
chars = ['A','B','C','D','E','F','G','H','I','J']
chars += ['1','2','3','4','5']

char1=(random.choice(chars))
char2=(random.choice(chars))
char3=(random.choice(chars))
char4=(random.choice(chars))

winning_number = char1+char2+char3+char4
print(f"{winning_number} is the winner!")
print(winning_number)

#9-15 continued in class
def roll_dice():
    char1 = random.choice(chars)
    char2 = random.choice(chars)
    char3 = random.choice(chars)
    char4 = random.choice(chars)
    number = char1+char2+char3+char4
    return number

my_number = ''
counter = 0
while my_number != winning_number:
    my_number = roll_dice()
    counter += 1

print(f"My number is:{my_number}")
print(f"It took this many number of attempts:{counter}")
print("\n")

