#UserInputQuestionTwo

answer = float(input("How much money do you have? $"))
    #realistic monetary value for each processor
price_i3 = 130
price_i5 = 200
price_i7 = 300
price_i9 = 500

    #seeing which processor user can afford
if answer >= price_i9:
    print("You can afford either a i3, i5, i7, or i19 processor!")
elif answer >= price_i7:
    print("You can afford either a i3, i5, or i17 processor!")
elif answer >= price_i5:
    print("You can afford either a i3 or i5 processor!")
elif answer >= price_i3:
    print("You can afford a i3 processor!")
else:
    print("Sorry you cannot afford a processor at this time! Save up!")
print("\n")

#UserInputQuestionThree

#I looked it up, and it seems like using while and try is the best strategy
while True:
    user_response = input("Enter an integer (or type 'stop' to exit the program): ")
    if user_response == "stop":
        break

    try:
        number = int(user_response)
        if number % 2 == 0:
            print(f"{user_response} is even!\n")
        else:
            print(f"{user_response} is odd!\n")
    except ValueError:
            print("Enter a valid integer.\n")
print("\n")

#UserInputQuestionFour

active = True
unknown_number = 53

while active:
    choose = input("Try to guess an unknown number between 12 and 68 (or type 'quit' to stop): ")

    if choose == "quit":
        print("Goodbye!")
        break

    if choose.isdigit():
        choose = int(choose)
        if choose == unknown_number:
            print("You guessed the unknown number!")
            active = False
        elif choose > unknown_number:
            print("Wrong, try a smaller number.")
        else:
            print("Wrong, try a larger number.")
    else:
        print("Guess the unknown number or 'quit'.")
print("\n")

#UserInputQuestionFive

ubuntu_flavours = [
    "edubuntu",
    "kubuntu",
    "lubuntu",
    "ubuntu budgie",
    "ubuntu cinnamon",
    "ubuntu kylin",
    "ubuntu mate",
    "ubuntu studio",
    "ubuntu unity",
    "xubuntu"
]

results = {}

while True:
    username = input("Please enter your username (or 'quit' to stop): ")

    if username.lower == "quit":
        break

    flavour = input("Enter you favorite Ubuntu flavor here: ").lower()

    if flavour in ubuntu_flavours:
        results[flavour] = username
        print(f" {username}, Your favorite flavour has now been recorded!\n")
    else:
        print("That is not an actual ubuntu flavour.")
        print("Valid options are:")
        print(ubuntu_flavours)

print("Results:")
for flavour, username in results.items():
    print(f"{username}: {flavour}")
