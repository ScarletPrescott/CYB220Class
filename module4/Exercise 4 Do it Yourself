#8-3 and 8.4 done in class
def make_shirt(size='Large', message='I love Python'):
    """Make a shirt"""
    print(f"We are printing this shirt now...")
    print(f"SIZE: {size}")
    print(f"MESSAGE: {message}")

make_shirt()
make_shirt(message='True2AU')
make_shirt(size="Medium", message="I Love Python")
make_shirt(size="Small", message="I Love Python")
print("\n")

#8-5 done in class
def describe_city(city, country='United States'):
    msg = f"{city.title()} is in {country.title()}"
    print(msg)
describe_city('Anderson')
describe_city('Greenville', country='The United States')
describe_city('Toronto', country='Canada')
print("\n")

#8-6
def city_country(city, country):
    """make it return something like Santiago, Chile"""
    return f"{city.title()}, {country.title()}"

city = city_country('santiago', 'chile')
print(city)
city = city_country('paris', 'chile')
print(city)
city = city_country('berlin', 'germany')
print(city)
print("\n")

